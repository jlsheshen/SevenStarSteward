<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:minHeight="105dp"
    android:orientation="horizontal">

    <com.lib.shiguotao.view.circleImage.RoundedImageView
        android:id="@+id/head_iv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        app:border_color="#7dffffff"
        app:mutate_background="false"
        app:oval="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/main_background_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:text="技师:约翰"
            android:textColor="@color/_7d7d7d"
            android:textSize="13sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/main_background_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/activity_technician_straight_tryst_item_zhicheng_icon" />

                <TextView
                    android:id="@+id/jibie_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="left|center_vertical"
                    android:text="一级护工"
                    android:textColor="@color/_7d7d7d"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/activity_technician_straight_tryst_item_jibie_icon" />

                <TextView
                    android:id="@+id/jingyan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="left|center_vertical"
                    android:text="五年经验"
                    android:textColor="@color/_7d7d7d"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/main_background_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20.6dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/activity_technician_straight_tryst_item_didian_icon" />

            <TextView
                android:id="@+id/diqu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:gravity="left|center_vertical"
                android:text="美国纽约"
                android:textColor="@color/_7d7d7d"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/yuyue_tv"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:background="@color/_5F264F"
            android:gravity="center"
            android:text="预约技师"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>