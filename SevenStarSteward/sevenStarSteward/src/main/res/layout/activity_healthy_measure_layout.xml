<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background_color"
    android:orientation="vertical"
    tools:context="com.sevenstar.steward2016.activity.HealthyMeasureActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_marginTop="6dp" android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:text="姓名"
                android:textColor="@color/_5F264F"
                android:textSize="24sp" android:id="@+id/xingming"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:text="性别"
                android:textColor="@color/_5F264F"
                android:textSize="24sp" android:id="@+id/xingbie"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:text="年龄"
                android:textColor="@color/_5F264F"
                android:textSize="24sp" android:id="@+id/nianling"/>
        </LinearLayout>
        <FrameLayout android:layout_width="150dp"  android:layout_margin="10dp" android:layout_height="150dp" android:background="@color/white">
            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/activity_arrange_child_item_icon" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:text="最后一次测量记录"
        android:textColor="@color/_5F264F"
        android:textSize="24sp" android:id="@+id/headTitle"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>
