<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="75dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/kick_starter_image_iv"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/kick_starter_item_icon" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/main_background_color" />

    <TextView
        android:id="@+id/kick_starter_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="center"
        android:text="轮椅"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/main_background_color" />

    <TextView
        android:id="@+id/kick_starter_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:text="-\t1\t+\t个"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/main_background_color" />

    <TextView
        android:id="@+id/kick_starter_money_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100元"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>