<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:paddingBottom="15dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:singleLine="true"
        android:text="城市活动版块宗旨"
        android:textColor="@color/_868686"
        android:textSize="22sp" />

    <include
        android:id="@+id/city_activity_layout_id"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        layout="@layout/activity_arrange_item_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/gongyi_activity_layout_id"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        layout="@layout/activity_arrange_item_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/quanzi_activity_layout_id"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        layout="@layout/activity_arrange_item_layout"
        android:visibility="gone" />

</LinearLayout>