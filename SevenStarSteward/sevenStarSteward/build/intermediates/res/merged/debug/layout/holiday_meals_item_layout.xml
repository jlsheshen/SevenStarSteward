<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="40dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jie_ri_fu_qin_jie_icon" />

        <TextView
            android:id="@+id/holiday_meals_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="父亲节"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/holiday_meals_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="2015/05/19"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/holiday_meals_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="55"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/holiday_meals_money_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="599元"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/holiday_meals_item_size_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="13sp" />

</LinearLayout>