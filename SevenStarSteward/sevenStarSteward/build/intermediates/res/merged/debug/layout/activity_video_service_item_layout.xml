<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/video_head_iv"
        android:layout_width="75dp"
        android:layout_height="107dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/activity_video_service_item_icon" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/main_background_color" />

    <TextView
        android:id="@+id/video_content_tv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:gravity="left|top"
        android:text="《高堡奇人》的设定非常新奇，故事发生在一个架空的世界一尚若二战轴心国胜利会怎样？当世界被德国纳粹与日本联手统治，生活变成了另一番景象。"
        android:textColor="@color/_282828"
        android:textSize="14sp" />

</LinearLayout>