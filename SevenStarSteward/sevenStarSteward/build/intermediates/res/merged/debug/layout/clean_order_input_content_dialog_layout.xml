<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/error_dialog_layout_ti_shi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:text="其他问题"
        android:textColor="@color/_282828"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="8dp"
        android:background="@color/home_background_color" />

    <EditText
        android:id="@+id/error_dialog_layout_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="left"
        android:hint="请输入内容"
        android:lineSpacingExtra="2dp"
        android:lines="5"
        android:maxLines="15"
        android:textColor="@color/_868686"
        android:textColorHint="@color/_969696"
        android:textSize="14sp" />

    <View
        android:id="@+id/main_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/home_background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/error_dialog_layout_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="取消"
            android:textColor="@color/_5F264F"
            android:textSize="16sp" />

        <View
            android:id="@+id/error_dialog_layout_line"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/home_background_color" />

        <TextView
            android:id="@+id/error_dialog_layout_comfirm_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="确定"
            android:textColor="@color/_5F264F"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>