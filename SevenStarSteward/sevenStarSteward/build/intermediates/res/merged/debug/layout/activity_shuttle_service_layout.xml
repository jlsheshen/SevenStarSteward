<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background_color"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/set_object_photo_iv"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/select_object_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="选择接送对象的照片"
            android:textColor="@color/_5F264F"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="接送人数"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/shuttle_service_et_one"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:numeric="integer"
                    android:textColor="@color/_5F264F"
                    android:textColorHint="@color/_868686"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="人"
                    android:textColor="@color/_5F264F"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="接送对象"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_two"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_three"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:numeric="decimal"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_four"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:numeric="decimal"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>
            <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="出价"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_eight"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:numeric="decimal"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="起点"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_five"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="终点"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <EditText
                android:id="@+id/shuttle_service_et_six"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/_5F264F"
                android:textColorHint="@color/_868686"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提供车辆"
                android:textColor="@color/_5F264F"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/_868686" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RadioButton
                    android:id="@+id/radiobutton_one"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@color/_5F264F"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radiobutton_two"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@color/_5F264F"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="备注信息"
            android:textColor="@color/_5F264F"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/_868686" />

        <EditText
            android:id="@+id/shuttle_service_et_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:lines="4"
            android:padding="10dp"
            android:textColor="@color/_5F264F"
            android:textColorHint="@color/_868686"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>